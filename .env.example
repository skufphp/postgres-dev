# ==========================================
# PostgreSQL Development Environment
# ==========================================

# --- PostgreSQL Configuration ---
# Пароль суперпользователя (нужен для первого запуска контейнера)
POSTGRES_PASSWORD=dev_password
# (Опционально) Имя пользователя и БД по умолчанию
POSTGRES_USER=dev_user
POSTGRES_DB=dev_db

# --- pgAdmin Configuration ---
# Доступ к pgAdmin: http://localhost:7032
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# --- Ports Configuration (Host -> Container) ---
# Внешний порт для подключения к базе (5432 внутри)
DB_FORWARD_PORT=7031
# Внешний порт для доступа к pgAdmin (80 внутри)
PGADMIN_PORT=7032

# --- SQL Commands for Project Setup ---
# -- 1) Пользователь под конкретный проект
# CREATE ROLE proj1_user WITH LOGIN PASSWORD '<PASSWORD_PLACEHOLDER>';
#
# -- 2) База под проект (ВАЖНО: владелец = этот пользователь)
# CREATE DATABASE proj1_db OWNER proj1_user;
#
# -- 3) (рекомендуется) закрыть доступ всем прочим и оставить только владельца
# REVOKE ALL ON DATABASE proj1_db FROM PUBLIC;
# GRANT CONNECT ON DATABASE proj1_db TO proj1_user;
#
# -------
# -- Удаление (ОСТОРОЖНО!):
# DROP DATABASE proj1_db;
# DROP USER proj1_user;